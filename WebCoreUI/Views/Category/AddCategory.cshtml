@model CategoryVM
@{
    ViewData["Title"] = "AddCategory";
}

<h1>AddCategory</h1>



<form asp-action="AddCategory" asp-controller="Category" method="post">
    <div>
        <input type="text" asp-for="Category.CategoryName" placeholder="Kategori İsmi" />
    </div>
    <div>
        <input type="text" asp-for="Category.Description" placeholder="Acıklaması" />
    </div>
    <div>
        <button class="btn btn-primary"> Ekle</button>
    </div>
</form>

